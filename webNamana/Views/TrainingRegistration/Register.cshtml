@model webNamana.Models.TrainingRegistration

@{
    ViewBag.Title = "Training Registration";
}

<h2>Training Registration</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@using (Html.BeginForm("Register", "TrainingRegistration", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.TrainingType)
    
    <div class="box">
        <div class="form-group">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FullName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNumber)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.RegistrationDate)
            @Html.TextBoxFor(m => m.RegistrationDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegistrationDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TrainingTime)
            @Html.TextBoxFor(m => m.TrainingTime, "{0:hh\\:mm}", new { @type = "time", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TrainingTime)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AdditionalNotes)
            @Html.TextAreaFor(m => m.AdditionalNotes, new { @class = "form-control", rows = "3" })
            @Html.ValidationMessageFor(m => m.AdditionalNotes)
        </div>

        <button type="submit" class="btn btn-1">Register</button>
    </div>
}
