﻿@model webNamana.Models.UserDashboard

@{
    ViewBag.Title = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Profile Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3>Profile</h3>
                </div>
                <div class="card-body text-center">
                    <!-- Profile picture -->
                    <img src="@Url.Content("~/Content/Images/placeholder-profile.png")" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px;" />
                    <h4 class="mt-3">@Model.Username</h4>
                    <p>@Model.Email</p>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h3>Your Cart</h3>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var item in Model.CartItems)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Actions Section -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Actions</h3>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("EditProfile", "User")" class="btn btn-primary mb-2">Edit Profile</a>
                    <a href="@Url.Action("ViewOrders", "User")" class="btn btn-secondary mb-2">View Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>