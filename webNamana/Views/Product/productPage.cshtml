@model List<webNamana.Models.ProductViewModel>

@{
    ViewBag.Title = "Products";
}

<h2>Products List</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card" style="margin:10px; padding:10px; border:1px solid #ccc;">
                <img src="@item.ProductImage" alt="@item.ProductName" style="width:100%; height:auto;" />
                <h3>@item.ProductName</h3>
                <p>@item.Description</p>
                <p><strong>@item.Price.ToString("C")</strong></p>
                <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>
