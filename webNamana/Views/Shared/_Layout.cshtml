@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewBag.Title - Energym</title>

    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/main/css")


</head>
@Scripts.Render("~/bundles/jquery/js")
@Scripts.Render("~/bundles/bootstrap/js")

<body>
    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/images/logo.png" alt="" />
                        <span>
                            Energym
                        </span>
                    </a>
                    <div class="contact_nav" id="">
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Service", "Service")">
                                    <img src="~/images/location.png" alt="" />
                                    <span>Location</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Service", "Service")">
                                    <img src="~/images/call.png" alt="" />
                                    <span>Call : + 01 1234567890</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Service", "Service")">
                                    <img src="~/images/envelope.png" alt="" />
                                    <span>demo@gmail.com</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        <!-- end header section -->
        <!-- Навигационное меню -->
        <section class="slider_section position-relative">
            <div class="container">
                <div class="custom_nav2">
                    <nav class="navbar navbar-expand-lg custom_nav-container">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <div class="d-flex flex-column flex-lg-row align-items-center">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("About", "About")">About</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Service", "Service")">Services</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Contact", "Contact")">Contact Us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Login", "Login")">Login</a>
                                    </li>
                                </ul>

                                <!-- Кнопка поиска -->
                                <a href="@Url.Action("ProductPage", "ProductPage")" class="search-link ml-5">
                                    <i class="fas fa-search"></i>
                                </a>

                                <!-- Кнопка корзины -->
                                <a href="@Url.Action("CartPage", "CartPage")" class="cart-link ml-lg-4">
                                    <i class="fas fa-shopping-cart"></i>
                                </a>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </section>
    </div>

    <!-- Основное содержимое страницы -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Футер -->
    <section class="container-fluid footer_section">
        <p>
            &copy; 2019 All Rights Reserved. Design by
            <a href="https://html.design/">Free Html Templates</a>
        </p>
    </section>
</body>
</html>