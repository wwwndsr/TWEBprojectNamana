<!-- Views/Shared/_Slider.cshtml -->
<section class="slider_section position-relative">
    <div class="container">
        <div class="custom_nav2">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="d-flex flex-column flex-lg-row align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("About", "About")">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Service", "Service")">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Contact", "Contact")">Contact Us</a>
                            </li>

                            @if (Session["UserEmail"] != null)
                            {
                                var userRole = Session["UserRole"].ToString();
                                if (userRole == "Admin")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("AdminPage", "Admin")">
                                            <i class="fas fa-tachometer-alt"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("UserPage", "User")">
                                            <i class="fas fa-user-circle"></i> Личный кабинет
                                        </a>
                                    </li>
                                }
                            }
                        </ul>

                        <!-- Кнопка поиска -->
                        <a href="@Url.Action("ProductPage", "ProductPage")" class="search-link ml-5">
                            <i class="fas fa-search"></i>
                        </a>

                        <!-- Кнопка корзины -->
                        <a href="@Url.Action("CartPage", "CartPage")" class="cart-link ml-lg-4">
                            <i class="fas fa-shopping-cart"></i>
                        </a>

                        <!-- Иконки пользователя и логина справа -->
                        <div class="d-flex ml-lg-4">
                            <a href="@Url.Action("UserPage", "User")" class="user-link mr-3">
                                <i class="fas fa-user-circle user-icon"></i>
                            </a>
                            @if (Session["UserEmail"] == null)
                            {
                                <a href="@Url.Action("Login", "Login")" class="login-link">
                                    <i class="fas fa-sign-in-alt login-icon"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</section>

<!-- Подключение Font Awesome для иконок -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

<style>
    /* Цвет иконок */
    .nav-link i, .cart-link i, .search-link i, .user-link i, .login-link i {
        color: black;
        transition: color 0.3s ease;
    }

        /* При наведении на иконки */
        .nav-link i:hover, .cart-link i:hover, .search-link i:hover, .user-link i:hover, .login-link i:hover {
            color: white;
        }

    /* Для кнопки поиска и корзины */
    .search-link, .cart-link, .user-link, .login-link {
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s ease;
    }

        .search-link:hover, .cart-link:hover, .user-link:hover, .login-link:hover {
            transform: scale(1.1);
        }

    /* Уменьшаем размер иконки пользователя */
    .user-icon {
        font-size: 25px; /* Уменьшаем размер иконки */
    }

    /* Иконка логина - уменьшаем размер, чтобы было как с иконкой корзины */
    .login-icon {
        font-size: 25px; /* Тот же размер, что и у иконки пользователя */
    }

    /* Иконки расположены горизонтально, выравнивание по центру */
    .user-link, .login-link {
        display: flex;
        align-items: center; /* Выравнивание иконок по вертикали */
    }
</style>
