@model webNamana.Domain.Entities.User.UDbTable
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <style>
      body {
            font-family: 'Poppins', sans-serif;
            background-image: url('@Url.Content("~/Content/images/slider-bg.jpg")');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }

        .login-box {
            max-width: 400px;
            width: 100%;
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 80px auto;
        }

        .login-box h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #00415d;
        }

        .form-control {
            border-radius: 5px;
            border-color: #ddd;
            margin-bottom: 20px;
            padding: 15px;
        }

        .btn-primary {
            background-color: #f8bc1a;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 5px;
            font-size: 16px;
        }

        .signup-link {
            margin-top: 15px;
            text-align: center;
            font-size: 14px;
        }
    </style>
}

<div class="login-box">
    <h2>Login</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="email" name="Email" class="form-control" placeholder="Email" required value="@(Model?.Email ?? "")"
 />
            @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Email"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="form-group">
            <input type="password" name="Password" class="form-control" placeholder="Password" required />
            @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Password"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Log In</button>

        <div class="signup-link" style="text-align:center; margin-top:15px;">
            <a href="@Url.Action("SignUp", "Account")">Don't have an account? Sign up</a>
        </div>
    }
</div>
