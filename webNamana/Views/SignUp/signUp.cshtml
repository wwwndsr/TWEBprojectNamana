@model webNamana.Models.SignUp
@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-image: url('@Url.Content("~/Content/images/slider-bg.jpg")');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }

        .sign-up-box {
            max-width: 400px;
            width: 100%;
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 80px auto;
        }

        .sign-up-box h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #00415d;
        }

        .form-control {
            border-radius: 5px;
            border-color: #ddd;
            margin-bottom: 20px;
            padding: 15px;
        }

        .btn-primary {
            background-color: #f8bc1a;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 5px;
            font-size: 16px;
        }

        .login-link {
            margin-top: 15px;
            text-align: center;
            font-size: 14px;
        }

        .text-danger {
            color: red;
            font-size: 12px;
        }
    </style>
}

<div class="sign-up-box">
    <h2>Sign Up</h2>
    <form method="post" action="@Url.Action("SignUp", "SignUp")">
        <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" id="Username" name="Username" class="form-control" placeholder="Username" value="@Model.Username" required />
            @if (ViewData.ModelState["Username"]?.Errors.Count > 0)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Username"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" value="@Model.Email" required />
            @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Email"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required />
            @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Password"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="form-group">
            <label for="ConfirmPassword">Confirm Password</label>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
            @if (ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["ConfirmPassword"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>

        <div class="login-link">
            <a href="@Url.Action("Login", "Login")">Already have an account? Log in</a>
        </div>
    </form>
</div>
