
@model List<webNamana.Models.Cart>

<!DOCTYPE html>
<html>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CartPage"; 
}
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Energym</title>

    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/assets/owl.carousel.min.css" />

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan|Dosis:400,600,700|Poppins:400,600,700&display=swap"
          rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="css/responsive.css" rel="stylesheet" />
</head>
<body class="sub_page about_page">
    <div class="hero_area">
        <!-- Подключение Font Awesome для иконок -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

        <style>
            .cart-link, .search-link {
                text-decoration: none;
                color: inherit;
                transition: transform 0.3s ease;
            }

                .cart-link:hover, .search-link:hover {
                    transform: scale(1.1);
                }
        </style>

        <!-- end slider section -->
    </div>
    <!-- about section -->

    <div class="wrap cf">
        <h1>My Cart</h1>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="empty-cart">
            <h2>Your cart is empty.</h2>
            <p>Browse our <a href="@Url.Action("ProductPage", "ProductPage")">products</a> to add items to your cart.</p>
        </div>
    }
    else
    {
        <div class="cart">
            <ul class="cartWrap">
                @foreach (var item in Model)
                {
                    <li class="item">
                        <div class="infoWrap">
                            <div class="cartSection">
                                <img src="@item.ProductImage" alt="Item Image" class="itemImg" />
                                <div class="itemDetails">
                                    <p class="itemNumber">#@item.ItemId</p>
                                    <h3>@item.ProductName</h3>
                                    <p>
                                        <button class="qty-btn decrease">-</button>
                                        <input type="text" class="qty" value="@item.Quantity" readonly />
                                        <button class="qty-btn increase">+</button> x $@item.Price
                                    </p>
                                    <p class="stockStatus">
                                        @if (item.InStock)
                                        {
                                            <span>In Stock</span>
                                        }
                                        else
                                        {
                                            <span>Out of Stock</span>
                                        }
                                    </p>
                                </div>
                            </div>
                            <div class="prodTotal cartSection">
                                <p>$@item.TotalPrice</p>
                            </div>
                            <div class="cartSection removeWrap">
                                @using (Html.BeginForm("RemoveFromCart", "CartPage", FormMethod.Post))
                                {
                                    @Html.Hidden("id", item.ItemId)
                                    <button type="submit" class="remove">x</button>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <div class="checkoutRow">
            <a href="payment-page.html" class="btn checkout">Checkout</a>
        </div>
    }

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: #f9f9f9;
            box-sizing: border-box;
            overflow-x: hidden;
        }

        .wrap {
            text-align: center;
            margin-bottom: 20px;
        }

        .cartWrap {
            list-style: none;
            padding: 0;
        }

        .item {
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }

        .infoWrap {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .cartSection {
            display: flex;
            align-items: center;
        }

        .itemImg {
            width: 80px;
            margin-right: 15px;
        }

        .itemDetails {
            display: flex;
            flex-direction: column;
        }

        .qty {
            width: 40px;
            text-align: center;
            margin: 0 5px;
        }

        .qty-btn {
            background: #ddd;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 3px;
        }

        .prodTotal p {
            font-weight: bold;
        }

        .remove {
            text-decoration: none;
            color: #f44336;
            font-size: 18px;
            cursor: pointer;
        }

        .checkoutRow {
            text-align: right;
            margin-top: 20px;
        }

        .btn.checkout {
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            .btn.checkout:hover {
                background: #45a049;
            }

        header, footer {
            width: 100%;
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll('a.remove').forEach(function (button) {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    const item = this.closest('.item');
                    if (item) {
                        item.style.transition = 'opacity 0.4s ease';
                        item.style.opacity = '0';
                        setTimeout(() => item.remove(), 400);
                    }
                });
            });

            document.querySelectorAll('.qty-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const input = this.closest('p').querySelector('.qty');
                    let currentValue = parseInt(input.value, 10) || 0;

                    if (this.classList.contains('increase')) {
                        input.value = currentValue + 1;
                    } else if (this.classList.contains('decrease') && currentValue > 1) {
                        input.value = currentValue - 1;
                    }
                });
            });
        });
    </script>


</body>

</html>